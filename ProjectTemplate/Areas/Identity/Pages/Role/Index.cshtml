@page

@model IndexModel
@{
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Role List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Role List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <partial name="_StatusMessage" model="@Model.StatusMessage"/>

    <form method="post" class="my-1 d-inline">
        <button class="btn btn-secondary" asp-page="./Add" asp-page-handler="StartNewRole">Create New Role</button>
    </form>
    <a class="btn btn-secondary" asp-page="./User">Assign Roles to User</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Roles)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <form method="post" class="d-inline">
                                <button class="btn btn-success btn-sm" name="Input.Id" value="@item.Id" asp-page="./Add" asp-page-handler="StartUpdate">Update</button>
                            </form>
                            <form method="POST" class="d-inline">
                                <button name="Input.Id" value="@item.Id" class="btn btn-success btn-sm"
                                        asp-page="./Delete">
                                    Xóa Role
                                </button>
                            </form>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</section>